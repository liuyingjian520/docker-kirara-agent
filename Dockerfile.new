FROM node:16-alpine

# 设置工作目录
WORKDIR /app

# 创建非root用户
RUN addgroup -S kirara && adduser -S -G kirara kirara

# 创建必要的目录
RUN mkdir -p /app/src /app/config /app/data /app/ssl
RUN chown -R kirara:kirara /app

# 设置时区
ENV TZ=Asia/Shanghai

# 安装必要的工具
RUN apk add --no-cache curl tzdata ca-certificates

# 复制源代码和配置文件
COPY --chown=kirara:kirara src/ /app/src/
COPY --chown=kirara:kirara config/ /app/config/

# 安装依赖
COPY --chown=kirara:kirara package.json /app/
RUN npm install --production

# 设置环境变量
ENV PORT=8080
ENV LOG_LEVEL=info
ENV NODE_ENV=production
ENV SECURITY_LEVEL=high

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:8080/api/health || exit 1

# 切换到非root用户
USER kirara

# 暴露端口
EXPOSE 8080

# 启动命令
CMD ["node", "src/index.js"]

LABEL Name=kirara-agent Version=1.0.0
LABEL maintainer="kirara-agent-team"
LABEL description="Docker容器化的Kirara代理服务"